[user]
  name = <%= @name %>
  email = <%= @email %>

[color]
  ui = auto
  diff = auto
  status = auto

[alias]
  co = checkout
  cm = commit
  st = status
  ld = log --stat --graph
  ls = log --stat
  ft = fetch --verbose
  dp = diff -p --raw --binary
  dc = diff --cached
  who = shortlog -sn
  pullr = pull --rebase
  merged = branch --merged
  nomerged = branch --no-merged

[fetch]
  recurseSubmodules = on-demand

[push]
  default = matching

[status]
  submodulesummary = 1
